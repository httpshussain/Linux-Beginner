labex:project/ $vim forloop.sh
#press i to edit the code and then press Esc and ;wq to save and move from shell to terminal

#!/bin/sh
 #here we are creating the 3 table
    
   for i in {1..10}
   do
       result=$(( $i*3  ))
       echo "3 * $i =$result"
   done   
   

labex:project/ $ ./forloop.sh  
3 * 1 =3
3 * 2 =6
3 * 3 =9
3 * 4 =12
3 * 5 =15
3 * 6 =18
3 * 7 =21
3 * 8 =24
3 * 9 =27
3 * 10 =30
